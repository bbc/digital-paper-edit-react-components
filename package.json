    "eslint-plugin-react": "^7.14.3",
    "gh-pages": "^2.0.1",
    "jest": "^24.9.0",
    "storybook-react-router": "^1.0.5"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
